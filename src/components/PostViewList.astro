---
import type { CollectionEntry } from 'astro:content'
import PostView from './PostView.astro'

interface Props {
  posts: CollectionEntry<'blog'>[]
  heading?: string
}

const { posts, heading } = Astro.props
---

{
  heading && (
    <div>
      <p class='text-4xl mt-14 mb-10'>{heading}</p>
    </div>
  )
}
<div class='flex flex-col gap-12'>
  {posts.map((post) => <PostView post={post} />)}
</div>

<div
  class='flex justify-center md:justify-end text-base font-medium leading-6 py-6'
>
  <a
    href={`/blog`}
    class='text-primary-700 hover:text-primary-500 dark:text-primary-400 dark:hover:text-primary-600'
    >查看全部</a
  >
</div>
