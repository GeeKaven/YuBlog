---
import type { CollectionEntry } from 'astro:content'
import { getDate, getMonthName, getYear } from '@/utils/time.ts'

interface Props {
  post: CollectionEntry<'blog'>
}

const {
  post: { data: post, slug },
} = Astro.props

console.log(post, slug)
---

<div class='flex gap-6'>
  <div class='sm:w-20 md:w-32'>
    <div class='flex flex-col w-full text-center'>
      <span class='text-5xl font-semibold text-gray-800 dark:text-gray-200'
        >{getDate(post.date)}
      </span>
      <span class='text-gray-600 dark:text-gray-400'
        >{`${getMonthName(post.date)} ${getYear(post.date)}`}
      </span>
    </div>
  </div>

  <div class='flex-1'>
    <h4
      class='font-medium text-2xl mb-2 text-primary-700 hover:text-primary-500 dark:text-primary-400 dark:hover:text-primary-600'
    >
      <a href={`/blog/${slug}`} '>{post.title}</a>
    </h4>
    <p class='text-lg leading-6 line-clamp-2 hyphens-auto'>
      {post.description}
    </p>
  </div>
</div>
